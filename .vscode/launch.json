{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "args": [
                "${workspaceFolder}/src/index.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug via nodemon",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "-x",
                "node",
                "--",
                "--loader",
                "ts-node/esm"
            ],
            "args": [
                "${workspaceFolder}/src/index.ts"
            ]
        }
    ]
}